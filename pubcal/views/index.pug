    script(src='js/vendor/modernizr-2.6.2.min.js')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js")
    script(src='js/index_front.js')
  body
    //if lt IE 7
      p.chromeframe
        | You are using an
        strong outdated
        |  browser. Please
        a(href='http://browsehappy.com/') upgrade your browser
        |  or
        a(href='http://www.google.com/chromeframe/?redirect=true') activate Google Chrome Frame
        |  to improve your experience.
    header.site-header
      .top-header
        .container
          .row
            .col-md-6.col-sm-6
              .top-header-left
                button(id="loginButton") login
    .main-header
      .container
        .row
          .col-md-4.col-sm-6.col-xs-8
            .logo
              h1
                a(href='#') PubCal

      .main-nav
        .container
          .row
            .col-md-6.col-sm-7
                .container
                  .row
                    .col-xs-8.col-xs-offset-2
                      .input-group
                        .input-group-btn.search-panel
                          button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
                            span#search_concept Filter by
                            span.caret
                          ul.dropdown-menu(role='menu')
                            li
                              a(href='#contains') Sport
                            li
                              a(href='#its_equal') Technology
                            li
                              a(href='#greather_than') Politics
                            li
                              a(href='#less_than') Education
                            //- li.divider
                            li
                              a(href='#all') Anything
                        input#search_param(type='hidden', name='search_param', value='all')
                        input.form-control(type='text', name='x', placeholder='Search term...')
                        span.input-group-btn
                          button.btn.btn-default(type='button')
                            span.glyphicon.glyphicon-search
    .content-section
      .container
          h4.center Most Popular Calendar

          div(id="popup" hidden="")
              button(id="login") login
              button(id="signup") signup
              button(id="close") close
              form(id="loginForm" class="form" action="login" method="post")
                  section(class="span12 text-center")
                      h3(id="inputField") Login
                          section
                              label(for="email" class="inputField") Email address
                              input(id="emailEx" class="inputField" type="email" name ="email" placeholder="Enter your email")
                              br
                              label(id="pwdField" for="password") Password
                              input(id="passwordEx" class="inputField" type="password" name="password" placeholder="Enter your password")
                          section
                              input(id="existingClient" class="button" type="submit" value="Login")
              form(id="signupForm" action="signup" method="post" hidden="")
                  h3(class="inputField") Sign Up
                    section(id="usernameField" class="span12")
                        label(class="inputField" for="username") Username
                        input(id="usernameNew" class="inputField" type="text" name ="username" placeholder="Choose a Username")
                    p(class="error" id="error_user")
                    section(id="emailField" class="span12 m_b_10x")
                        label(class="inputField" for="email" id="m_b_30x") Email address
                        input(id="emailNew" class="inputField" type="email" name ="emailNew" placeholder="Enter your email")
                    section(id="passwordField" class="span12 m_b_10x")
                        label(class="inputField" for="password") Password
                        input(class="inputField" id="passwordNew" type="password" name="passwordNew")
                    section(id="confirmPasswordField" class="span12 m_b_10x")
                        label(id="inputField6" for="password") Confirm password
                        input(id="passwordNewConfirm" class="inputField" type="password"  name="confirmPassword")
                    section(id="passnew" class="span12")
                    section(class="span12 text-center")
                        input(id="newClient" class="button" type="submit" value="Sign Up")
                    section
                        h3
                        span=errors


      .bottom-footer
        .container
          .row

    script(src='js/vendor/jquery-1.10.1.min.js')
    script.
      window.jQuery || document.write('<script src="js/vendor/jquery-1.10.1.min.js"><\\/script>')
