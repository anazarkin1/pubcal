extends layout
block content
    section(class="main-wrap")
        section(class="nav-menu bdb-lg h100")
            div(class="main-nav-button-wrap vert-cent")
                div(id="mycalendars" class="main-nav-button selected")
                    a(id="nav1" href="#")
                        span(class="nav-title") My Calendar &nbsp;
        span(class="email-field").hidden=email
        span(class="username-field").hidden=username
        .w3-content.w3-padding#resultWrap(style='max-width:1564px')
            .w3-container.w3-padding-32
                h3.w3-border-bottom.w3-border-light-grey.w3-padding-12 My Calendars
            each calendar in calendars
                .w3-row-padding
                    .w3-col.l3.m6.w3-margin-bottom
                        .w3-display-container.w3-card-4
                            if calendar.created_by == username
                                div(class="resultField")
                                    a(href='calendars/'+ calendar._id)=calendar.name
                                        img(src='/public/images/calendar_1.jpg', alt='Calendar', style='width:100%')
                                    w3-container.w3-center.w3-margin
                                        a.w3-btn.w3-white.w3-border.w3-border-indigo.w3-round-xlarge.w3-hover-indigo.w3-text-indigo.w3-margin#edit-btn(href='calendars/'+ calendar._id + '/edit') Edit
                                        a.w3-btn.w3-white.w3-border.w3-border-red.w3-round-xlarge.w3-hover-red.w3-text-red.w3-margin#remove-btn(href='') Remove
            .w3-container.w3-padding-32
                h3.w3-border-bottom.w3-border-light-grey.w3-padding-12 I'm subscribed to
            each calendar in calendars
                .w3-row-padding
                    .w3-col.l3.m6.w3-margin-bottom
                        .w3-display-container.w3-card-4
                            if calendar.created_by != username
                                div(class="resultField")
                                    a(href='calendars/'+ calendar._id)=calendar.name
                                        img(src='/public/images/calendar_1.jpg', alt='Calendar', style='width:100%')
                                    w3-container.w3-center.w3-margin
                                        a.w3-btn.w3-white.w3-border.w3-border-teal.w3-round-xlarge.w3-hover-teal.w3-text-teal.w3-margin#unsubscribe-btn(href='') Unsubscribe
                                        a.w3-btn.w3-white.w3-border.w3-border-green.w3-round-xlarge.w3-hover-green.w3-text-green.w3-margin#subscribe-btn(href='') Subscribe

            


    script(src='/public/js/profile.js', defer)
    script(src='/public/js/sub-unsub.js', defer)